public class Timebomb {


    public static void main(String[] args)  throws InterruptedException {

        {
            int counter = 20;
            do
            {
                System.out.println(counter + " Seconden tot de Bom ontploft.");
                counter--;
                Thread.sleep(1000);
            } while (counter !=0);
            System.out.println("BOOOOOOM!!!");
        }
    }
}
